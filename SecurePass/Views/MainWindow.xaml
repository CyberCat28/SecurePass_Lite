<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="password_manager.Views.MainWindow"
        Title="Менеджер паролей" Height="500" Width="847" Background="#222831" FontFamily="Rockwell" Foreground="#FFEEEEEE">
    <Grid Margin="10">
        <StackPanel>
            <!-- Панель поиска -->
            <StackPanel Margin="0 0 0 10" HorizontalAlignment="Center" Orientation="Horizontal" >
                <StackPanel>
                    <Label Content="По названию"  Foreground="#FFEEEEEE" Width="210" HorizontalAlignment="Left"/>
                    <TextBox x:Name="SearchTitleBox" Width="200" Margin="0 0 10 0" BorderBrush="{x:Null}" Background="#393E46" Foreground="#FFEEEEEE"
                             TextChanged="Search_TextChanged"/>
                </StackPanel>
                <StackPanel>
                    <Label Content="По категории" Foreground="#FFEEEEEE"/>
                    <TextBox x:Name="SearchCategoryBox" Width="200" Margin="0 0 10 0" BorderBrush="{x:Null}" Background="#393E46" Foreground="#FFEEEEEE"
                             TextChanged="Search_TextChanged"/>
                </StackPanel>
                <Button Content="Показать/Скрыть пароли" Width="160" Click="TogglePasswords_Click" BorderBrush="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <!-- Список записей -->
            <ListView x:Name="ListEntries" Height="350" Margin="0 0 0 10" Foreground="#FFEEEEEE" av:ItemsSource="{av:SampleData ItemCount=5}" BorderBrush="{x:Null}" Background="{x:Null}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Логин" Width="200" DisplayMemberBinding="{Binding Username}"/>
                        <GridViewColumn Header="Пароль" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayPassword}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Категория" Width="200" DisplayMemberBinding="{Binding Category}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Добавить" Width="82" Margin="0 0 10 0" Click="Add_Click" Height="29">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Редактировать" Width="104" Margin="0 0 10 0" Click="Edit_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Удалить" Width="69" Click="Delete_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>