<Window x:Class="password_manager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Width="360" Height="220" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#222831" FontFamily="Arial">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="InfoLabel" Content="Введите мастер-пароль" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#FFEEEEEE" FontSize="16" />

            <Label Content="Мастер-пароль:" Foreground="#FFEEEEEE"/>
            <PasswordBox x:Name="MasterBox" Margin="0 0 0 10" BorderBrush="{x:Null}" Background="#393E46" Foreground="#FFEEEEEE" Height="17" Width="319" HorizontalAlignment="Center"/>


            <Label x:Name="ConfirmLabel" Content="Повторите пароль:" Visibility="Collapsed" Foreground="#FFEEEEEE"/>
            <PasswordBox x:Name="ConfirmBox" Margin="0 0 0 10" Visibility="Collapsed" BorderBrush="{x:Null}" Background="#393E46" Foreground="#FFEEEEEE" Height="17" Width="319"/>

            <Button x:Name="LoginButton" Content="Войти" Width="100" HorizontalAlignment="Center" BorderBrush="{x:Null}" Click="Login_Click" Background="#FFEEEEEE">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
