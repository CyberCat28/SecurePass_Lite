<Window x:Class="password_manager.Views.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать" Width="541" Height="550">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 5">
            <TextBlock Text="Название"/>
            <TextBox x:Name="TitleBox"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0 5">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="UserBox"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0 5">
            <TextBlock Text="Пароль"/>
            <Grid>
                <PasswordBox x:Name="PassBox" Visibility="Visible" Margin="0,0,179,0"/>
                <TextBox x:Name="PassTextBox" Visibility="Collapsed" Width="250"/>
                <Button Content="Посмотреть" Width="164" HorizontalAlignment="Left" Click="TogglePassword_Click" Margin="332,0,0,0"/>
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Button Content="Сгенерировать" Width="120" Click="Generate_Click"/>
                <Button Content="Копировать" Width="117" Margin="5 0 0 0" Click="Copy_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5" VerticalAlignment="Center">
                <TextBlock Text="Длина:" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <Slider x:Name="LengthSlider" Minimum="8" Maximum="16" Value="12" Width="150" TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBlock Text="{Binding ElementName=LengthSlider, Path=Value}" VerticalAlignment="Center" Margin="5 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5" VerticalAlignment="Center">
                <TextBlock Text="Включить:" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <CheckBox x:Name="UpperCheck" Content="Большие буквы" IsChecked="True" Margin="5 0"/>
                <CheckBox x:Name="LowerCheck" Content="Маленькие буквы" IsChecked="True" Margin="5 0"/>
                <CheckBox x:Name="DigitsCheck" Content="Цифры" IsChecked="True" Margin="5 0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0 5">
            <TextBlock Text="Категория"/>
            <TextBox x:Name="CategoryBox"/>
        </StackPanel>

        <Button Grid.Row="6"
                Content="Сохранить"
                Width="120"
                HorizontalAlignment="Right"
                Margin="0 10 0 0"
                Click="Save_Click"/>
    </Grid>
</Window>
